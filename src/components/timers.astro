---
import { twMerge } from 'tailwind-merge'
import { Timer } from './ common/timer'

const props = Astro.props

---

<div class={twMerge("flex flex-wrap gap-2 text-red-500", props.class)}>
  {[...Array(5)].map((_, n) => (
    <div class="bg-base-200 h-24 aspect-square flex justify-center items-center text-2xl">{n+1}</div>
    <Timer duration={{}}/>
  ))}
</div>
